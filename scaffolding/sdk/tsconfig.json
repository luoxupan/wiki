{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist",
    "jsxFactory": "React.createElement"
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
  ]
}
